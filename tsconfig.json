{
  "compilerOptions": {
    "target": "es2016",    
    "module": "commonjs",  
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                           
    "sourceMap": true,
    "types": ["jest", "node"],
    "baseUrl": "./src",
    "paths": {
      "*": ["*"], 
    }                    
  },
  "include": ["src/index.ts","./src/helper/typings/*.d.ts","src/**/*.ts"],
  "exclude": ["node_modules"]
}
